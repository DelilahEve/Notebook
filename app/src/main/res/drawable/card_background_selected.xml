<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item >

        <layer-list>

            <item
                android:top="12dp" >

                <shape>

                    <solid
                        android:color="?attr/background_card_shadow" />

                    <corners
                        android:radius="1dp"
                        android:bottomLeftRadius="2dp"
                        android:bottomRightRadius="2dp"
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp" />

                </shape>
            </item>

            <item
                android:bottom="2dp" >

                <shape>

                    <solid android:color="?attr/background_card_pressed" />

                    <corners android:radius="2dp" />

                </shape>

            </item>

        </layer-list>

    </item>

</selector>